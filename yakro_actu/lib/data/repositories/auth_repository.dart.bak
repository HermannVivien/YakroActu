import 'package:flutter/foundation.dart';
import '../models/user.dart';
import '../services/api/auth_api.dart';
import '../services/socket_service.dart';

class AuthRepository extends ChangeNotifier {
  final AuthApi _authApi = AuthApi();
  final SocketService _socketService = SocketService();

  User? _currentUser;
  bool _isLoading = false;
  String? _error;

  User? get currentUser => _currentUser;
  bool get isLoading => _isLoading;
  String? get error => _error;
  bool get isAuthenticated => _currentUser != null;

  /// Connexion
  Future<bool> login(String email, String password) async {
    _setLoading(true);
    _error = null;

    try {
      final response = await _authApi.login(email, password);
      _currentUser = response['user'];
      
      // Initialiser WebSocket
      await _socketService.connect(const String.fromEnvironment('API_URL'));
      
      _setLoading(false);
      notifyListeners();
      return true;
    } catch (e) {
      _error = e.toString();
      _setLoading(false);
      notifyListeners();
      return false;
    }
  }

  /// Inscription
  Future<bool> register({
    required String email,
    required String password,
    required String firstName,
    required String lastName,
    String? phone,
  }) async {
    _setLoading(true);
    _error = null;

    try {
      final response = await _authApi.register(
        email: email,
        password: password,
        firstName: firstName,
        lastName: lastName,
        phone: phone,
      );
      _currentUser = response['user'];
      
      // Initialiser WebSocket
      await _socketService.connect(const String.fromEnvironment('API_URL'));
      
      _setLoading(false);
      notifyListeners();
      return true;
    } catch (e) {
      _error = e.toString();
      _setLoading(false);
      notifyListeners();
      return false;
    }
  }

  /// Déconnexion
  Future<void> logout() async {
    _setLoading(true);

    try {
      await _authApi.logout();
      _socketService.disconnect();
      _currentUser = null;
      _error = null;
    } catch (e) {
      print('Logout error: $e');
    } finally {
      _setLoading(false);
      notifyListeners();
    }
  }

  /// Récupérer l'utilisateur courant
  Future<void> loadCurrentUser() async {
    _setLoading(true);
    _error = null;

    try {
      _currentUser = await _authApi.getCurrentUser();
      
      // Initialiser WebSocket si connecté
      if (_currentUser != null) {
        await _socketService.connect(const String.fromEnvironment('API_URL'));
      }
      
      _setLoading(false);
      notifyListeners();
    } catch (e) {
      _error = e.toString();
      _currentUser = null;
      _setLoading(false);
      notifyListeners();
    }
  }

  /// Mot de passe oublié
  Future<bool> forgotPassword(String email) async {
    _setLoading(true);
    _error = null;

    try {
      await _authApi.forgotPassword(email);
      _setLoading(false);
      notifyListeners();
      return true;
    } catch (e) {
      _error = e.toString();
      _setLoading(false);
      notifyListeners();
      return false;
    }
  }

  /// Réinitialiser le mot de passe
  Future<bool> resetPassword(String token, String newPassword) async {
    _setLoading(true);
    _error = null;

    try {
      await _authApi.resetPassword(token, newPassword);
      _setLoading(false);
      notifyListeners();
      return true;
    } catch (e) {
      _error = e.toString();
      _setLoading(false);
      notifyListeners();
      return false;
    }
  }

  /// Changer le mot de passe
  Future<bool> changePassword(String currentPassword, String newPassword) async {
    _setLoading(true);
    _error = null;

    try {
      await _authApi.changePassword(currentPassword, newPassword);
      _setLoading(false);
      notifyListeners();
      return true;
    } catch (e) {
      _error = e.toString();
      _setLoading(false);
      notifyListeners();
      return false;
    }
  }

  /// Mettre à jour le profil
  Future<bool> updateProfile(Map<String, dynamic> data) async {
    _setLoading(true);
    _error = null;

    try {
      final updatedUser = await _authApi.updateProfile(data);
      _currentUser = updatedUser;
      _setLoading(false);
      notifyListeners();
      return true;
    } catch (e) {
      _error = e.toString();
      _setLoading(false);
      notifyListeners();
      return false;
    }
  }

  void _setLoading(bool value) {
    _isLoading = value;
  }

  void clearError() {
    _error = null;
    notifyListeners();
  }
}
